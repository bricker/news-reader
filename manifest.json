{
  "manifest_version": 2,
  "name": "News Reader",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": [
        "*://*.cnn.com/*",
        "*://*.latimes.com/*",
        "*://*.nytimes.com/*",
        "*://*.washingtonpost.com/*"
      ],
      "js": ["src/index.js"]
    }
  ],
  "icons": {
    "16": "images/enabled-16.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/enabled-16.png"
    }
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "permissions": [ "storage" ]
}
